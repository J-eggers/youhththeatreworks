<div class="container">
    <div class="row">
        <div class="card col mx-auto">
            <div class="card-body">
            <h2 class="text-center ">Order Form</h2>
            <hr>
            <section>
                <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Cost</th>
                    <th>Total Cost</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Adult Ticket</td>
                    <td>{{adult}} tickets</td>
                    <td>${{adultPrice}}</td>
                    <td>${{adultCost}}</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Child Ticket </td>
                    <td>{{child}} tickets</td>
                    <td>${{childPrice}}</td>
                    <td>${{childCost}}</td>
                </tr>
                <tr>
                    <th></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <th></th>
                    <td>Total Cost</td>
                    <td></td>
                    <td></td>
                    <td>${{viewPrice}}</td>
                </tr>
            </tbody>
        </table>


            </section>




                <h4>Your information</h4>
                <hr>
                <form action="/tickets/purchase" method="POST">
                <div class="form-group">
                        <label for="name">Name</label>
                        <input value="{{user.name}}" type="text" name="name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input value="{{user.email}}" name="email" type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Cell Phone Number</label>
                        <input value="{{user.phone}}" name="phone" type="text" class="form-control" required>
                    </div>
                       
                    <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="{{stripePublishableKey}}"
                        data-amount="{{amount}}"
                        data-zip-code="true"
                        data-name="Youth Theatre Works"
                        data-description="Youth Theatre Works presents {{title}}"
                        data-email = '{{user.email}}'
                        data-image="../img/theatremask.PNG"
                        data-locale="auto">
                    </script>
                    <script>
                        //hide default stipe button 
                        document.getElementsByClassName('stripe-button-el')[0].style.display ='none';
                    </script>
                    <button class="btn btn-block btn-secondary btn-lg text-white">Buy Tickets</button>
                </form>
            </div>
        </div>
    </div>
</div>