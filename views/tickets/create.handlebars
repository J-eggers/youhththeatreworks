<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center">Create Ticekt</h3>
                <form action="/tickets/" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input required type="text" class="form-control" name="title">
                    </div>
                    <div class="form-group">
                        <label for="showDate">Show Date</label>
                        <input required type="date" class="form-control" name="showDate">
                    </div>
                    <div class="form-group">
                        <label for="adultCost">Cost for Adult Ticket </label>
                        <input required type="Text" class="form-control" name="adultCost" placeholder="15">
                    </div>
                    <div class="form-group">
                        <label for="childCost">Cost for Child Ticket</label>
                        <input required type="Text" class="form-control" name="childCost" placeholder="10">
                    </div>
                    

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
