<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center">Buy tickets</h3>
                <form method="post" action="tickets/order">
                    <div class="form-group">
                                <label for="adultTickets">Adult Tickets</label>
                                <input required type="text" id="adultTickets" name="adultTickets"  placeholder="0" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="childTickets" >Child Tickets</label>
                                <input type="text" id="childTickets" name="childTickets" placeholder="0" class="form-control">
                            </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <script>
    document.getElementById('adultTickets').addEventListener('blur', validateTicket);
    document.getElementById('childTickets').addEventListener('blur', validateTicket);
    
    

    function validateTicket() {
        const child = document.getElementById('childTickets');
        const adult = document.getElementById('adultTickets');
        const submit = document.getElementById('submit');
        const re = /^[0-9]{0,2}$/;
        if(!re.test(child.value)){
            child.classList.add('is-invalid');
            
        } else {
            child.classList.remove('is-invalid');
        }
        if(!re.test(adult.value)){
            adult.classList.add('is-invalid');
        } else {
            adult.classList.remove('is-invalid');
        }
        if((!re.test(adult.value)) || (!re.test(child.value))){
            if(!submit.hasAttribute.('disabled')){
                submit.setAttribute('disabled');
            }
        } else {
            if(submit.hasAttribute.('disabled')){
                submit.removeAttribute('disabled');
            }
        }
    }

</script>
            </div>
        </div>
    </div>
</div>
