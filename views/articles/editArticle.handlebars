

<div class="container">
  <div class="card card-body">
    <h3>Edit Article</h3>
    <form action="/articles/{{article.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <label for="title">Title</label>
        <input required type="text" class="form-control" name="title" value="{{article.title}}">
      </div>
      <div class="form-group">
        <label for="rehearsal">Body</label>
        <textarea required class="form-control" name="body">{{article.body}}</textarea>
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>