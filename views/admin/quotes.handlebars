<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center">Quote Submission</h3>
                <form method="post" action="/admin/quote">
                    <div class="form-group">
                        <label for="quote">Quote</label>
                        <textarea required class="form-control" name="quote"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="person">Person</label>
                        <input name="person" type="text" class="form-control" placeholder="first and last name"
                            required>
                    </div>


                    <button type="submit" class="btn btn-primary btn-block">Submit</button>



                </form>
            </div>
        </div>
    </div>
</div>