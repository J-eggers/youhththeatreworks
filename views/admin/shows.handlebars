<!-- This maybe be priavte or public view depending on what they want -->
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center">Shows</h3>
            <a href="/shows/addShow" class="btn btn-primary btn-block mb-2"><i class="fas fa-plus mr-2"></i>Create Show</a>
            </div>
        </div>
    </div>    
    <br>
    <h3>Past Shows</h3>
    <hr>
{{#each shows}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{description}}</p>
    <a href="/shows/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form method="post" action="/shows/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>

{{else}}
    <p>No Shows Listed</p>
{{/each}}
</div>