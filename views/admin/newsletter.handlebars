<!-- This is  a private view-->
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center">NewsLetter</h3>
            <a href="/articles/addArticle" class="btn btn-primary btn-block mb-2"><i class="fas fa-plus mr-2"></i>Create Article</a>
            </div>
        </div>
    </div>    
    <br>
    <h3>Articles</h3>
    <hr>

{{#each article}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <a href="/articles/editArticle/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
     <form method="post" action="/articles/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>

{{else}}
    <p>No Shows Listed</p>
{{/each}}
</div>